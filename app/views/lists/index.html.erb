
<% @lists.each do |list| %>
<%= list.name %>
<%= button_to "Delete", list_path(list), method: 'delete', class: "button-small btn btn-default "%><br>
<% end %>



<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-12 bg-white">

      <%= render 'layouts/nav' %>

      <div>
        <h1 class="log-in text-center">Task List</h1>
        <hr>
        <% @lists.each do |list| %>
          <ul style="border-bottom:solid 1px #f1f1f1">
            <li style="overflow-x: auto;">
              <a style="color: #44635d; font-size:18px; font-weight:200; line-height:2" class="to-do" href="#"><%= list.name %></a>

              <div style="float:right;">
                <p class="task-list-text display-inline">Due Date</p>
              </div>

              <div role="group" aria-label="...">
                <%= button_to "View Tasks", list_tasks_path(list), method: 'get', class: "button-small btn light-blue"%>
                <%= button_to "Edit", edit_list_path(list), method: 'get', class: "button-small btn light-green"%>
                <%= button_to "Delete", list_path(list), method: 'delete', class: "button-small btn"%>
                <p class="task-list-text due-date display-inline"><%= list.due_date.strftime("%B %d, %Y")%></p>
              </div>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
